# {{ ansible_managed }}
upstream {{ app_name }}_rackup {
  server unix:///home/{{ deploy_user }}/{{ app_name }}/shared/tmp/sockets/unicorn.sock fail_timeout=0;
}

server {
  gzip on;
  listen 80;
  client_max_body_size 4G;
  client_body_buffer_size    128k;
  fastcgi_read_timeout 600s;
  gzip_types text/plain text/css application/x-javascript text/xml application/xml application/xml+rss text/javascript application/json;                                                                      
  server_name {{ domain }};
  root /home/{{ deploy_user }}/{{ app_name }}/current/public;

  proxy_set_header  X-Accel-Mapping      /home/{{ deploy_user }}/{{ app_name }}/shared/private/=/private_files/; 
 
  if (-f /home/{{ deploy_user }}/maintenance) {
    return 503;
  }

  error_page 503               @maintenance;

  location / {
    rewrite ^/(.*)/$ /$1 permanent;

    try_files $uri/index.html $uri.html $uri @rackup;
    error_page 404               /404.html;
    error_page 422               /422.html;
    error_page 500 502 504       /500.html;
    error_page 403               /403.html;
  }
  
  location @maintenance {
    if ($uri !~ ^/images/) {
      rewrite ^(.*)$ /503.html break;
    }
  }

  location @rackup {
    proxy_http_version 1.1;

    proxy_set_header Host $http_host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
    proxy_set_header X-Nginx-Proxy true;
   
    proxy_set_header X-Sendfile-Type X-Accel-Redirect;
    proxy_set_header X-Accel-Mapping /home/{{ deploy_user }}/{{ app_name }}/shared/private/=/private_files/; 

    proxy_hide_header X-Runtime;
    proxy_hide_header X-Rack-Cache;

    proxy_redirect off;
   # proxy_max_temp_file_size 0;
   proxy_connect_timeout 90s;
    proxy_read_timeout 100;
    proxy_send_timeout 100;
   # proxy_buffer_size    64k;
   # proxy_buffers     16 32k;
   # proxy_busy_buffers_size 64k;
   # proxy_temp_file_write_size 64k;
    proxy_pass http://{{ app_name }}_rackup;    
  }

  location ~* \.(js|css|png|jpg|jpeg|gif|ico|JPG|JPEG)$ {
    expires 1y;
    log_not_found off;
    try_files $uri @rackup;
  }
  location ~ ^/(assets|images|javascripts|stylesheets|swfs)/ {
    try_files $uri @rackup;
    expires     max;
    add_header  Cache-Control public;
    add_header  Last-Modified "";
    add_header  ETag "";
    add_header Access-Control-Allow-Origin *;
    break;
 }
  
